<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<fx:root alignment="TOP_CENTER" style="-fx-background-color: transparent;" type="VBox" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="image" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true">
         <image>
            <Image url="@../img/configuration.png" />
         </image>
         <viewport>
            <Rectangle2D />
         </viewport>
      </ImageView>
      <Label fx:id="labelValue" alignment="CENTER" minWidth="20.0" style="-fx-background-color: red;" text="0" textAlignment="CENTER" textFill="WHITE">
         <VBox.margin>
            <Insets bottom="3.0" top="3.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
         <padding>
            <Insets left="2.0" right="2.0" />
         </padding>
      </Label>
      <Label fx:id="labelName" text="液位计" textFill="WHITE">
         <effect>
            <DropShadow blurType="TWO_PASS_BOX" />
         </effect>
      </Label>
   </children>
</fx:root>
